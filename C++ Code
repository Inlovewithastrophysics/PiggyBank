#include <iostream>

int main() {
  int pesos;
  int reais;
  int soles;
  int dollars;

  std::cout << "Enter number of Colombian Pesos";
  std::cin >> pesos; //1.00 - 0.00027
  std::cout << "Enter number of Brazilian Reais";
  std::cin >> reais; //1.00 - 0.21
  std::cout << "Enter number of Peruvian Soles";
  std::cin >> soles; //1.00 - 0.27

  dollars = 0.00032 * pesos + 0.27 * reais + 0.3
  * soles;

  std::cout << "Total USD = $" << dollars << "\n";
}
